<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/body_one_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <TextView
            android:id="@+id/body_one_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="250dp"
            android:singleLine="true"
            android:text="高圆圆"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/body_one_text_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="跟帖" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/body_one_text_title"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/body_one_image_one"
                android:layout_width="110dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/body_one_image_two"
                android:layout_width="110dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/body_one_image_three"
                android:layout_width="110dp"
                android:layout_height="80dp"
                android:layout_alignParentRight="true"
                android:scaleType="fitXY" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/body_two_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/body_two_image"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/body_two_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/body_two_image"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/body_two_image"
            android:singleLine="true"
            android:text="北京新闻"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/body_two_text_digest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/body_two_image"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/body_two_image"
            android:lineSpacingExtra="4dp"
            android:maxLines="2"
            android:text="今天"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/body_two_text_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/body_two_image"
            android:layout_alignParentRight="true"
            android:text="1616跟帖"
            android:textSize="12dp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/body_three_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <TextView
            android:id="@+id/body_three_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="#000"
            android:textSize="16sp" />


        <ImageView
            android:id="@+id/body_three_image"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_below="@id/body_three_text_title"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="8dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/body_three_text_digest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/body_three_image"
            android:singleLine="true"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/body_three_text_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/body_three_text_digest"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:textSize="12dp" />

    </RelativeLayout>

</LinearLayout>